

body.example-page
  .demo-app
    margin: $padding-lg

.demo-app
  color: $text-color
  margin: $padding-md 0
  padding: $padding-md
  border-radius: $border-radius
  border: 10px solid $border
  background-color: white

  &.debug

    *[rbs-watch]
      position: relative
      overflow: visible
      box-sizing: border-box

      &:hover
        box-shadow: 0px 0px 10px 10000px rgba(black, .2)

        &:before
          position: absolute
          padding: .3em .6em
          font-family: Monaco, monospace
          letter-spacing: .02rem;
          font-size: 1rem
          background-color: tomato
          color: white
          content: attr(rbs-watch)
          left: -70px

  h1
    margin: $padding-sm 0 $padding-lg 0
    display: block
    line-height: 1em
    word-break: break-all

    small
      font-family: $font-body
      font-weight: normal
      font-size: .5em
      color: $txt-light
      letter-spacing: 0em
      line-height: .15em

  .header-container
    margin-bottom: $padding-lg

    label
      text-transform: uppercase
      font-family: $font-header
      font-size: 0.8em
      margin-right: $padding-xs

  label input[type='text']
    margin-left: $padding-xs

  .filters
    background-color: $bg-2
    border: 1px solid $border
    border-top-left-radius: 10px
    border-top-right-radius: 10px
    padding: 10px 15px
    border-bottom: none
    display: flex
    justify-content: space-between

  input[type='text'], button, select, textarea
    background-color: $bg
    padding: $padding-xs $padding-sm
    box-sizing: border-box
    border-radius: $border-radius
    border: 1px solid $border
    color: $txt-dark
    font-family: $font-header
    outline: none
    height: 40px

  button
    font-size: 12px

  input[type='text'], textarea
    min-width: 200px
    background-color: $bg-light
    font-family: $font-body
    font-size: 1rem
    flex: 1

  .add-bar
    display: flex
    width: 100%

  button
    color: $txt
    text-transform: uppercase
    font-weight: bold
    cursor: pointer
    margin-left: $padding-xs

    &:disabled
      color: $txt-light
      opacity: 0.6

  ul
    padding: 0
    margin: 0 0 20px 0
    list-style: none
    border: 1px solid $border
    border-bottom-left-radius: 10px
    border-bottom-right-radius: 10px

    &.simple
      border-radius: $border-radius

    li
      margin-bottom: 0
      border-bottom: 1px solid $border
      background-color: $bg-2
      padding: $padding-xs $padding-sm

      &:nth-child(odd)
        background-color: $bg

      &:last-child
        border: none

      .todo
        align-items: center
        justify-content: space-between
        display: flex

        label strong
          white-space: pre-wrap

        .actions
          display: flex
          flex-wrap: nowrap
          align-items: center

          button
            height: 100%

        .date
          font-size: 0.9em
          margin-right: 10px
          white-space: nowrap
